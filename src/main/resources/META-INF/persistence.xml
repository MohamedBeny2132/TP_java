<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="default" transaction-type="RESOURCE_LOCAL">
        <class>org.univ_paris8.iut.montreuil.qdev.tp2025.gr7.jeuquizz.demo.bean.Annonce</class>
        <class>org.univ_paris8.iut.montreuil.qdev.tp2025.gr7.jeuquizz.demo.bean.User</class>
        <class>org.univ_paris8.iut.montreuil.qdev.tp2025.gr7.jeuquizz.demo.bean.Category</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/MasterAnnonce"/>
            <property name="jakarta.persistence.jdbc.user" value="test"/>
            <property name="jakarta.persistence.jdbc.password" value="test"/>

            <!-- Hibernate dialect -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>

            <!-- Génération du schéma -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <!-- Pour voir le SQL généré -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>

</persistence>
